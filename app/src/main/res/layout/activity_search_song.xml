<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchSong">

    <LinearLayout
        android:id="@+id/SearchSongLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/black_bg"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageButton
            android:id="@+id/backToPost"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:backgroundTint="@color/black_bg"
            app:srcCompat="@drawable/ic_arrow_back" />

        <EditText
            android:id="@+id/input_songtitle"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:fontFamily="@font/urbanist"
            android:hint="Search"
            android:paddingStart="15dp"
            android:paddingEnd="8dp"
            android:textColor="@color/white"
            android:textAlignment="textStart"
            android:textColorHint="@color/white" />

        <Button
            android:id="@+id/searchsong_button"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="Search" />

    </LinearLayout>

    <ListView
        android:id="@+id/song_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/black_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:listitem="@layout/song_view"
        app:layout_constraintTop_toBottomOf="@+id/SearchSongLayout">

    </ListView>


</androidx.constraintlayout.widget.ConstraintLayout>

